{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@assets/*": ["src/assets/*"],
      "@collections/*": ["src/collections/*"],
      "@components/*": ["src/components/*"],
      "@containers/*": ["src/containers/*"],
      "@content/*": ["src/content/*"],
      "@data/*": ["src/data/*"],
      "@icons/*": ["src/icons/*"],
      "@layouts/*": ["src/layouts/*"],
      "@pages/*": ["src/pages/*"],
      "@styles/*": ["src/styles/*"],
      "@types/*": ["src/types/*"],
      "@utils/*": ["src/utils/*"]
    },
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "exactOptionalPropertyTypes": false
  },
  // "include": ["**/*.ts", "**/*.tsx", "**/*.mts"],
  "exclude": ["functions/**/*"],
  "mdx": {
    "checkMdx": true
  }
}
