{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "exactOptionalPropertyTypes": false
  },
  "include": [".astro/types.d.ts", "**/*"],
  "exclude": ["dist", "functions/**/*"],
  "mdx": {
    "checkMdx": true
  }
}
