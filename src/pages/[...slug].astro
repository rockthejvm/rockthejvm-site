---
import { getCollection, type CollectionEntry } from "astro:content";
import Informational from "../layouts/Informational.astro";

export async function getStaticPaths() {
  const informationals = await getCollection("informationals");
  return informationals.map((informational) => ({
    params: { slug: informational.slug },
    props: { informational },
  }));
}

interface Props {
  informational: CollectionEntry<"informationals">;
}

const { informational } = Astro.props;
const { Content } = await informational.render();
---

<Informational frontmatter={informational.data}>
  <Content />
</Informational>
