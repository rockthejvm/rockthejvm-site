---
import site from "../data/site.json";
import Base from "../layouts/Base.astro";
import Logo from "../assets/images/logos/rtjvm-red.png";
import Membership from "../components/Membership.astro";
import LatestContent from "../components/LatestContent";
import NarrowContainer from "../containers/NarrowContainer";
import { type CollectionEntry } from "astro:content";
import Testimonials from "../components/Testimonials.astro";
import SocialProof from "../components/SocialProof.astro";
import Hero from "../components/Hero.astro";
import Contact from "../components/Contact.astro";
interface Props {
  canonicalUrl: URL;
  description: string;
  image: { src: string; alt: string };
  title: string;
  companies: CollectionEntry<"companies">[];
}
const image = { src: Logo.src, alt: site.logo.alt };
const title = "Home";
---

<Base canonicalUrl={Astro.url} description={site.description} {image} {title}>
  <NarrowContainer>
    <Hero />
    <section>
      <h2>Latest Content</h2>
      <div class="flex gap-y-10 flex-col md:flex-row md:gap-x-10">
        <LatestContent />
        <LatestContent />
      </div>
    </section>
    <section>
      <h2>Available Courses</h2>
    </section>
    <Membership />
    <SocialProof />
    <Testimonials />
    <Contact />
  </NarrowContainer>
</Base>
<style>
  section {
    margin-top: 5rem;
    margin-bottom: 5rem;
  }
</style>
