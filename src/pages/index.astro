import Landing from "../layouts/Landing.astro";

const image: { src: string; alt: string } = {
  src: "https://www.filepicker.io/api/file/oZt3ZMwpTRuvR4k04o21",
  alt: "Rock the JVM - learn Scala, Akka and Apache Spark",
};
const metaDescription: string =
  "Learn Scala, Kotlin, functional programming (Cats Effect, ZIO), big data and streaming (Apache Spark, Flink), all with hands-on online courses.";
const metaTitle: string = "Scala, Kotlin and Big Data Courses";
const OGDescription: string =
  "Online courses and hands-on training on Scala, Kotlin, Apache Spark, Flink, ZIO, Cats Effect, Akka and more";
const OGImage: string =
  "https://file-uploads.teachablecdn.com/effbc0d6cc384212bea0ce3b8c79e6e1/7d77a6a3c0ee4a95845626c0172a705a";
