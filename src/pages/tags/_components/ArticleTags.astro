---
import ArticleTag from "@/components/ArticleTag.astro";
import compareByNaturalOrder from "@/utils/compareByNaturalOrder";
import type { CollectionEntry } from "astro:content";

interface Props {
  tags: CollectionEntry<"tags">[];
}

const { tags: _tags } = Astro.props,
  sortedTags = [..._tags].sort((a, b) =>
    compareByNaturalOrder(a.data.id, b.data.id),
  );
---

<section class="pb-8 sm:py-2 md:pb-16">
  <header class="py-8 md:py-16">
    <h1 class="mx-6 text-center text-content-1 lg:mx-8">Article Tags</h1>
  </header>
  <div
    class="mx-auto my-4 grid grid-cols-3 gap-6 px-8 sm:grid-cols-4 md:my-8 lg:grid-cols-5"
  >
    {sortedTags.map((tag) => <ArticleTag {tag} />)}
  </div>
</section>
