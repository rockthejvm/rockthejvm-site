---
import ArticleDifficulties from "@components/ArticleDifficulties.astro";
import BaseLayout from "@layouts/BaseLayout.astro";
import { getCollection } from "astro:content";

const difficulties = await getCollection("difficulties").then((difficulties) =>
  difficulties
    .sort((a, b) => (a.data.ordinal <= b.data.ordinal ? -1 : 1))
    .map(({ id }) => id),
);
---

<BaseLayout title="Difficulty index" description="The difficulty index">
  <ArticleDifficulties {difficulties} />
</BaseLayout>
