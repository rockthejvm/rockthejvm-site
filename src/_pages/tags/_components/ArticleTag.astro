---
import type { CollectionEntry } from "astro:content";

interface Props {
  tag: CollectionEntry<"tags">;
}

const {
  tag: {
    data: { id },
  },
} = Astro.props;
---

<a
  href={`/tags/${id}`}
  class="relative z-10 rounded-full bg-tag px-3 py-1.5 text-center font-medium hover:bg-gray-100"
>
  <p class="text-indigo-800">{id}</p>
</a>
