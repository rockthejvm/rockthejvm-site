---
import { Image } from "astro:assets";

interface Props {
  image?: { src: string; alt: string } | undefined;
  subtitle?: string;
  subtitle2?: string | undefined;
  title: string;
}

const { image, subtitle, subtitle2, title } = Astro.props;
---

<section class="hero-section">
  <div class="img-wrapper">
    {image && <Image src={image.src} alt={image.alt} inferSize={true} />}
  </div>

  <div class="content-wrapper">
    <h1 class="main-heading">{title}</h1>
    {subtitle && <p class="intro-text">{subtitle}</p>}
    {subtitle2 && <p class="intro-text">{subtitle2}</p>}
  </div>
</section>
