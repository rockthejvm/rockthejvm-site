---
import { Image } from "astro:assets";
import Prose from "./Prose.astro";

interface Props {
  section: { src: string; alt: string };
  flip: boolean;
}

const { section, flip } = Astro.props;
---

<div class="overflow-hidden bg-bkg py-24 sm:py-32">
  <div class="mx-auto max-w-7xl md:px-6 lg:px-8">
    <div
      class="grid grid-cols-1 gap-x-8 gap-y-16 lg:gap-y-20 lg:grid-cols-2 lg:items-start"
    >
      <div class={`sm:px-6 lg:px-0 ${flip ? "order-1" : "order-2"}`}>
        <div
          class="relative isolateoverflow-hidden sm:mx-auto sm:max-w-xl sm:rounded-3xl lg:mx-0 lg:max-w-none"
        >
          <Image
            class="mx-auto rounded-xl"
            src={section.src}
            alt={section.alt}
            width={500}
            height={500}
          />
        </div>
      </div>
      <div
        class={`px-6 md:px-0 lg:pr-4 lg:pt-4 ${flip ? "order-2" : "order-1"}`}
      >
        <div class="mx-auto max-w-2xl lg:mx-0 lg:max-w-lg">
          <Prose>
            <slot />
          </Prose>
        </div>
      </div>
    </div>
  </div>
</div>
