---
import { Image } from "astro:assets";
import type { CollectionEntry } from "astro:content";
import AuthorSmallHelper from "./AuthorSmallHelper";

interface Props {
  author: CollectionEntry<"authors">;
  minutesRead?: number;
}
const { author, minutesRead } = Astro.props;
---

<AuthorSmallHelper authorName={author.data.name} {minutesRead}>
  <Image
    src={author.data.photo}
    alt={author.data.name}
    class="mx-auto h-20 w-20 rounded-full shadow-lg"
    slot="photo"
  />
  <slot slot="time" />
</AuthorSmallHelper>
