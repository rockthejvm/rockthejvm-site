---
interface Props {
  class?: string;
}

const { class: additionalClasses } = Astro.props;
---

<div
  class:list={[
    "prose prose-sm text-wrap sm:prose-base md:prose-lg lg:prose-xl prose-a:text-accent-1 prose-a:no-underline hover:prose-a:text-accent-2 hover:prose-a:underline prose-code:before:hidden prose-code:after:hidden prose-img:mx-auto",
    additionalClasses,
  ]}
>
  <slot />
</div>
<style is:global>
  @media (prefers-color-scheme: dark) {
    .astro-code,
    .astro-code span {
      color: var(--shiki-dark) !important;
      background-color: var(--shiki-dark-bg) !important;
      /* Optional, if you also want font styles */
      font-style: var(--shiki-dark-font-style) !important;
      font-weight: var(--shiki-dark-font-weight) !important;
      text-decoration: var(--shiki-dark-text-decoration) !important;
    }
  }
</style>
