---
import { Icon } from "astro-icon/components";

interface Props {
  bgColor: string;
  borderColor: string;
  textColor: string;
  icon: string;
}

const { bgColor, borderColor, icon, textColor } = Astro.props;
---

<aside
  class=`border-l-4 p-4 rounded-md my-8`
  style={`background: ${bgColor}; border-color: ${borderColor}; color: ${textColor}`}
  role="alert"
>
  <Icon name=`admonitions/${icon}` class="inline-block size-6" />
  <slot />
</aside>
