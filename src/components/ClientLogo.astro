---
import { Icon } from "astro-icon/components";
import type { CollectionEntry } from "astro:content";

interface Props {
  client: CollectionEntry<"companies">;
}

const {
  client: {
    data: { id, name },
  },
} = Astro.props;
---

<Icon
  name=`companies/${id}`
  {name}
  width={158}
  height={48}
  class="col-span-2 max-h-12 w-full fill-content object-contain lg:col-span-1"
/>
