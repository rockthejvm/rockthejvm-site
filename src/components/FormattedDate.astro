---
interface Props {
  class?: string;
  date: Date;
}

const { class: additionalClasses, date } = Astro.props;
---

<time datetime={date.toISOString()} class:list={["", additionalClasses]}>
  {
    date.toLocaleDateString("en-US", {
      day: "numeric",
      month: "short",
      timeZone: "UTC",
      year: "numeric",
    })
  }
</time>
