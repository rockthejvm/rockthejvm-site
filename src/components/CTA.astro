---
import CTAHelper from "./CTAHelper";
import { Image } from "astro:assets";

interface Props {
  alt: string;
  description: string;
  src: ImageMetadata;
  title: string;
}

const { alt, description, src, title } = Astro.props;
---

<CTAHelper {description} {title}>
  <slot />
  <Image
    {alt}
    {src}
    class="absolute inset-0 w-full h-full object-cover"
    slot="image"
  />
</CTAHelper>
