---
import LatestContentLink from "./LatestContentLink.astro";
import { Image } from "astro:assets";

export type ContentLink = {
  title: string;
  url: string;
};

interface Props {
  links: ContentLink[];
  image: { src: string; alt: string };
  title: string;
  contentHomeUrl: string;
}

const { contentHomeUrl, links, image, title } = Astro.props;
---

<div class="free-content-box">
  <div class="free-image-wrapper">
    <a href={contentHomeUrl}>
      <Image src={image.src} alt={image.alt} inferSize={true} />
    </a>
  </div>
  <h3 class="box-heading course-title">
    <a href={contentHomeUrl}>{title}</a>
  </h3>
  <div class="content-links-container">
    {
      links.map((link) => (
        <LatestContentLink url={link.url} title={link.title} />
      ))
    }
  </div>
</div>
