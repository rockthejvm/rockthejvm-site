---
import compareByNaturalOrder from "@/utils/compareByNaturalOrder";
import { getCollection } from "astro:content";
import ClientLogo from "./ClientLogo.astro";
import LogoCloudHelper from "./LogoCloudHelper";

const clients = [
  ...(await getCollection("companies", ({ data: { id } }) =>
    [
      "adobe",
      "apple",
      "datto",
      "google",
      "hapag-lloyd",
      "hm-revenue-and-customs",
      "intuit",
      "microsoft",
      "orange",
      "swiss-re",
      "ververica",
    ].includes(id),
  )),
].sort(compareByNaturalOrder);
---

<LogoCloudHelper>
  {clients.map((client) => <ClientLogo {client} />)}
</LogoCloudHelper>
