---
import { getCollection } from "astro:content";
import ClientLogo from "./ClientLogo.astro";
import LogoCloudHelper from "./LogoCloudHelper";

const clients = await getCollection(
  "companies",
  ({ id }) => id !== "rock-the-jvm",
);
---

<LogoCloudHelper>
  {
    clients.map((company) => (
      <ClientLogo name={company.data.slug} title={company.data.title} />
    ))
  }
</LogoCloudHelper>
