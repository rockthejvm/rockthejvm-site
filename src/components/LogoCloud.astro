---
import { getCollection } from "astro:content";
import ClientLogo from "./ClientLogo.astro";
import LogoCloudHelper from "./LogoCloudHelper";

const clients = (
  await getCollection("companies", ({ id }) =>
    [
      "adobe",
      "apple",
      "datto",
      "google",
      "hapag-lloyd",
      "hm-revenue-and-customs",
      "intuit",
      "microsoft",
      "orange",
      "swiss-re",
      "ververica",
    ].includes(id),
  )
).sort((a, b) => a.data.name.localeCompare(b.data.name));
---

<LogoCloudHelper>
  {
    clients.map((company) => (
      <ClientLogo name={company.data.id} title={company.data.title} />
    ))
  }
</LogoCloudHelper>
