---
import type { Page } from "astro";

interface Props {
  prevUrl?: string;
  nextUrl?: string;
  page: Page;
}

const { prevUrl, nextUrl, page } = Astro.props;
---

<nav
  class="flex items-center justify-between border-t border-gray-200 px-4 sm:px-0 bg-bkg"
>
  <div class="-mt-px flex w-0 flex-1 mx-8">
    {
      prevUrl ? (
        <a
          href={prevUrl}
          class="inline-flex items-center border-t-2 border-transparent pr-1 pt-4 text-sm font-medium text-gray-500 hover:border-gray-300 hover:text-gray-700"
        >
          <svg
            class="mr-3 h-5 w-5 text-gray-400"
            viewBox="0 0 20 20"
            fill="currentColor"
            aria-hidden="true"
          >
            <path
              fill-rule="evenodd"
              d="M18 10a.75.75 0 01-.75.75H4.66l2.1 1.95a.75.75 0 11-1.02 1.1l-3.5-3.25a.75.75 0 010-1.1l3.5-3.25a.75.75 0 111.02 1.1l-2.1 1.95h12.59A.75.75 0 0118 10z"
              clip-rule="evenodd"
            />
          </svg>
          Previous
        </a>
      ) : null
    }
  </div>
  <div class="hidden md:-mt-px md:flex">
    {
      page.currentPage === 1 ? (
        <a
          href={page.url.first}
          class="inline-flex items-center border-t-2 border-indigo-500 px-4 pt-4 text-sm font-medium text-indigo-600"
          aria-current="page"
        >
          1
        </a>
      ) : (
        <a
          href={page.url.first}
          class="inline-flex items-center border-t-2 border-transparent px-4 pt-4 text-sm font-medium text-gray-500 hover:border-gray-300 hover:text-gray-700"
        >
          1
        </a>
      )
    }
    {
      page.currentPage > 1 + 2 && (
        <span class="inline-flex items-center border-t-2 border-transparent px-4 pt-4 text-sm font-medium text-gray-500">
          ...
        </span>
      )
    }
    {
      [-2, -1, 0, 1, 2]
        .map((modifier) => page.currentPage + modifier)
        .filter((pageNumber) => pageNumber > 1 && pageNumber < page.lastPage)
        .map((pageNumber) =>
          page.currentPage === pageNumber ? (
            <a
              href={`/articles/${pageNumber}`}
              class="inline-flex items-center border-t-2 border-indigo-500 px-4 pt-4 text-sm font-medium text-indigo-600"
              aria-current="page"
            >
              {pageNumber}
            </a>
          ) : (
            <a
              href={`/articles/${pageNumber}`}
              class="inline-flex items-center border-t-2 border-transparent px-4 pt-4 text-sm font-medium text-gray-500 hover:border-gray-300 hover:text-gray-700"
            >
              {pageNumber}
            </a>
          ),
        )
    }
    {
      page.currentPage < page.lastPage - 2 && (
        <span class="inline-flex items-center border-t-2 border-transparent px-4 pt-4 text-sm font-medium text-gray-500">
          ...
        </span>
      )
    }
    {
      page.currentPage === page.lastPage ? (
        <a
          href={page.url.last}
          class="inline-flex items-center border-t-2 border-indigo-500 px-4 pt-4 text-sm font-medium text-indigo-600"
          aria-current="page"
        >
          {page.lastPage}
        </a>
      ) : (
        <a
          href={page.url.last}
          class="inline-flex items-center border-t-2 border-transparent px-4 pt-4 text-sm font-medium text-gray-500 hover:border-gray-300 hover:text-gray-700"
        >
          {page.lastPage}
        </a>
      )
    }
  </div>
  <div class="-mt-px flex w-0 flex-1 justify-end mx-8">
    {
      nextUrl ? (
        <a
          href={nextUrl}
          class="inline-flex items-center border-t-2 border-transparent pl-1 pt-4 text-sm font-medium text-gray-500 hover:border-gray-300 hover:text-gray-700"
        >
          Next
          <svg
            class="ml-3 h-5 w-5 text-gray-400"
            viewBox="0 0 20 20"
            fill="currentColor"
            aria-hidden="true"
          >
            <path
              fill-rule="evenodd"
              d="M2 10a.75.75 0 01.75-.75h12.59l-2.1-1.95a.75.75 0 111.02-1.1l3.5 3.25a.75.75 0 010 1.1l-3.5 3.25a.75.75 0 11-1.02-1.1l2.1-1.95H2.75A.75.75 0 012 10z"
              clip-rule="evenodd"
            />
          </svg>
        </a>
      ) : null
    }
  </div>
</nav>
