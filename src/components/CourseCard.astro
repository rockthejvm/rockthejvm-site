---
import type { CollectionEntry } from "astro:content";

interface Props {
  course: CollectionEntry<"courses">;
}

const { course } = Astro.props;
---

<div
  class="md:flex mt-8 w-full rounded-2xl md:h-52 bg-secondary overflow-hidden shadow-2xl"
>
  <div
    class="mb-4 flex-shrink-0 md:rounded-l-2xl overflow-hidden md:mb-0 md:min-h-full md:mr-4"
  >
    <a href={`/courses/${course.slug}`}>
      <div
        class="h-72 w-full text-gray-300 lg:w-96 md:w-64 md:h-full overflow-hidden"
      >
        <img
          src={course.data.heroImage.src}
          alt={`${course.data.title}`}
          class="min-w-full min-h-full object-cover object-center"
        />
      </div>
    </a>
  </div>
  <div class="my-8 px-8 md:px-8 md:my-auto">
    <a href={`/courses/${course.slug}`}>
      <h3
        class="text-lg font-bold text-content-2 hover:text-accent-2 text-center md:text-left"
      >
        {course.data.title}
      </h3>
    </a>
      <Fragment set:html={course.data.excerpt} class="mt-1 text-content-1"/>
  </div>
</div>
