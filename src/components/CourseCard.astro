---
import type { CollectionEntry } from "astro:content";

interface Props {
  course: CollectionEntry<"courses">;
}

const { course } = Astro.props;
---

<div class="md:flex mt-8 w-full rounded-2xl md:h-52 bg-white overflow-hidden">
  <div
    class="mb-4 flex-shrink-0 md:rounded-l-2xl overflow-hidden md:mb-0 md:min-h-full md:mr-4"
  >
    <div
      class="h-32 w-full bg-white text-gray-300 lg:w-96 md:w-80 md:min-h-full overflow-hidden"
    >
      <img
        src={course.data.image.src}
        alt={`${course.data.title}`}
        class="object-cover object-center"
      />
    </div>
  </div>
  <div class="my-8 px-8 md:px-0 md:my-auto">
    <h3 class="text-lg font-bold text-center md:text-left">
      {course.data.title}
    </h3>
    <p class="mt-1">
      <!-- {course.data.excerpt} -->
      <Fragment set:html={course.data.excerpt} />
    </p>
  </div>
</div>
