---
import type { CollectionEntry } from "astro:content";
import BackgroundGradient from "./BackgroundGradient.astro";
import H2 from "./H2.astro";

interface Props {
  color: CollectionEntry<"courseCategories">["data"]["color"];
  title?: string;
  showGradient?: boolean;
}

const { color, title, showGradient = false } = Astro.props;
---

<section>
  {
    title && (
      <header class="mx-auto" style={`background: ${color}`}>
        <H2 {color} class="mx-auto text-center">
          {title}
        </H2>
      </header>
    )
  }
  <div
    class="relative mx-auto w-full overflow-y-hidden overflow-x-visible px-8 py-16"
  >
    {showGradient && <BackgroundGradient />}
    <div class="z-10 mx-auto max-w-7xl">
      <slot />
    </div>
  </div>
</section>
