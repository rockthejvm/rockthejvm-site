import Base from "./Base.astro";
import NarrowContainer from "../containers/NarrowContainer";

interface Props {
  frontmatter: CollectionEntry<"courses">["data"];
}

const { frontmatter } = Astro.props;

const { archived, bundledCourses, description, grouping, image, price, title } =
  frontmatter;
---

