---
import type { CollectionEntry } from "astro:content";
import Base from "./Base.astro";
import FullContainer from "../containers/FullContainer";
import CTA from "../components/CTA.astro";

interface Props {
  frontmatter: CollectionEntry<"courses">["data"];
}

const { frontmatter } = Astro.props;

const { archived, bundledCourses, description, grouping, image, price, title } =
  frontmatter;
---

<Base {description} {title}>
  <article>
    <CTA src={image} alt={title} {title} />
    <!-- <slot name="cta" /> -->
  </article>
  <FullContainer />
</Base>
