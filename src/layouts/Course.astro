---
import type { CollectionEntry } from "astro:content";
import Base from "./Base.astro";
import FullContainer from "../containers/FullContainer";
import CTA from "../components/CTA.astro";
import FAQ from "../components/FAQ";
import CoursePricing from "../components/CoursePricing.astro";

interface Props {
  course: CollectionEntry<"courses">;
}

const { course } = Astro.props;
const frontmatter = course.data;

const {
  archived,
  bundledCourses,
  description,
  faqs,
  grouping,
  image,
  price,
  title,
} = frontmatter;
---

<Base {description} {title}>
  <FullContainer>
    <article>
      <CTA src={image} alt={title} {title} />
      <CoursePricing {course} />
      {faqs && <FAQ {faqs} client:visible />}
    </article>
  </FullContainer>
</Base>
