---
import "@styles/base.css";
import "@styles/fonts.css";
import Footer from "../components/Footer.astro";
import Head from "../components/Head.astro";
import Header from "../components/Header.astro";
import site from "../data/site.json";

interface Props {
  article?: {
    author: {
      name: string;
      twitter?: string;
    };
    updatedTime?: Date;
    publishedTime: Date;
    section: string;
    tags: string[];
    video?: URL;
  };
  canonicalUrl?: URL;
  forcedTheme?: string;
  description: string;
  image?: {
    alt: string;
    src: string;
  };
  isHomePage?: boolean;
  structuredData?: string;
  title: string;
  type?: string;
  error?: boolean;
  searchIndexable?: boolean;
}

const {
  article,
  canonicalUrl = new URL(Astro.url.pathname, Astro.site),
  searchIndexable = false,
  forcedTheme,
  description,
  error = false,
  image = site.logo,
  isHomePage = false,
  structuredData,
  title,
  type = "website",
} = Astro.props;
---

<!doctype html>
<html lang="en">
  <Head
    {article}
    {canonicalUrl}
    {forcedTheme}
    {description}
    {error}
    {image}
    {structuredData}
    {title}
    {type}
  />
  <body
    class={`${isHomePage ? "body-gradient" : ""} min-h-screen ${forcedTheme ? "bg-holiday-bkg" : "bg-bkg"}`}
  >
    <Header showThemeToggle={!forcedTheme} />
    <main {...searchIndexable ? { "data-pagefind-body": true } : {}}>
      <slot />
    </main>
    <Footer holiday={!!forcedTheme} />
  </body>
</html>
