---
import "../styles/global.css";
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";
import Head from "../components/Head.astro";

interface Props {
  metaDescription: string;
  metaTitle: string;
  OGDescription: string;
  OGImage: string;
  OGImageAlt: string;
  OGTitle: string;
  OGType: string;
  OGURL: string;
}

const {
  metaDescription,
  metaTitle,
  OGDescription,
  OGImage,
  OGImageAlt,
  OGTitle,
  OGType,
  OGURL,
} = Astro.props;
---

<!doctype html>
<html lang="en">
  <Head
    {metaDescription}
    {metaTitle}
    {OGDescription}
    {OGImage}
    {OGImageAlt}
    {OGTitle}
    {OGType}
    {OGURL}
  />
  <body>
    <Header />
    <main>
      <slot />
    </main>
    <Footer />
  </body>
</html>
