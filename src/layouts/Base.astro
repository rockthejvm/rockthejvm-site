---
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";
import Head from "../components/Head.astro";

interface Props {
  description: string;
  metaTitle: string;
  OGDescription: string;
  OGImage: string;
  OGImageAlt: string;
  OGTitle: string;
  OGType: string;
  OGURL: string;
}

const {
  description,
  metaTitle,
  OGDescription,
  OGImage,
  OGImageAlt,
  OGTitle,
  OGType,
  OGURL,
} = Astro.props;
---

<!doctype html>
<html lang="en">
  <Head
    {description}
    {metaTitle}
    {OGDescription}
    {OGImage}
    {OGImageAlt}
    {OGTitle}
    {OGType}
    {OGURL}
  />
  <body>
    <div class="wrapper">
      <Header />
      <main>
        <slot />
        <Footer />
      </main>
    </div>
  </body>
</html>
