---
import Footer from "../components/Footer.astro";
import Head from "../components/Head.astro";
import Header from "../components/Header.astro";
import "@styles/fonts.css";
import "@styles/global.css";

interface Props {
  article?: {
    author: {
      name: string;
      twitter?: string;
    };
    updatedTime?: Date;
    publishedTime: Date;
    section: string;
    tags: string[];
    video?: URL;
  };
  bodyClasses?: string;
  canonicalUrl?: URL;
  description: string;
  image?: {
    alt: string;
    src: string;
  };
  title: string;
  type?: string;
  error?: boolean;
}

const {
  article,
  bodyClasses,
  canonicalUrl,
  description,
  error,
  image,
  title,
  type,
} = Astro.props;
---

<!doctype html>
<html lang="en" class="h-full">
  <Head {article} {canonicalUrl} {description} {error} {image} {title} {type} />
  <body id="temp" class={`h-full ${bodyClasses}`}>
    <div>
      <Header />
      <main>
        <slot />
        <Footer />
      </main>
    </div>
  </body>
</html>
