{
  //// Visual Studio Code
  "editor.detectIndentation": false,
  "editor.formatOnSave": true,
  "editor.insertSpaces": true,
  "editor.tabSize": 2,
  "editor.trimAutoWhitespace": true,
  "editor.wordWrap": "off",
  "files.autoSave": "off",
  "files.encoding": "utf8",
  "files.eol": "\n",
  "files.insertFinalNewline": true,
  "files.readonlyInclude": {
    ".gitignore": true,
    ".trunk/**": true, // trunk.io
    "**/{,*-}lock{,.*}": true,
    "**/{bin,build,dist,out,output,_site,site}/**": true,
    "**/{LICENSE,LEGAL}{,.*}": true,
    "**/CHANGELOG{,.*}": true
  },
  "files.trimFinalNewlines": true,
  "files.trimTrailingWhitespace": true,
  "git.autofetch": true,
  "git.confirmSync": false,
  "git.enableSmartCommit": false,
  "git.mergeEditor": true,
  "git.postCommitCommand": "sync",
  "git.suggestSmartCommit": false,
  "html.format.enable": false,
  "javascript.format.enable": false,
  "javascript.updateImportsOnFileMove.enabled": "always",
  "javascript.validate.enable": false,
  "markdown.editor.drop.copyIntoWorkspace": "never",
  "markdown.editor.filePaste.copyIntoWorkspace": "never",
  "markdown.updateLinksOnFileMove.enabled": "always",
  "notebook.formatOnSave.enabled": true,
  "notebook.insertFinalNewline": true,
  "notebook.output.wordWrap": true,
  "search.exclude": {
    "**/node_modules": true,
    "**/bower_components": true,
    "**/*.code-search": true,
    "**/*lock*": true,
    "public/rss/styles.xsl": true
  },
  "typescript.format.enable": false,
  "typescript.updateImportsOnFileMove.enabled": "always",
  "typescript.validate.enable": false,
  //// Language-Specific
  "[markdown]": {
    "editor.tabSize": 4,
    "editor.wordWrap": "on"
  },
  "[mdx]": {
    "editor.tabSize": 4,
    "editor.wordWrap": "on"
  },
  "[plaintext]": {
    "editor.tabSize": 4,
    "editor.wordWrap": "on"
  },
  //// GitHub Codespace
  // bradlc.vscode-tailwindcss
  "files.associations": {
    "*.css": "tailwindcss"
  },
  "editor.quickSuggestions": {
    "strings": "on"
  },
  "tailwindCSS.validate": false,
  // mcr.microsoft.com/devcontainers/base:1-ubuntu-22.04
  "terminal.integrated.defaultProfile.linux": "zsh",
  // redhat.vscode-yaml
  "yaml.extension.recommendations": false,
  "yaml.format.enable": false,
  "yaml.validate": false,
  "redhat.telemetry.enabled": false,
  "yaml.schemas": {
    ".astro/collections/authors.schema.json": ["/src/content/authors/**"],
    ".astro/collections/categories.schema.json": ["/src/content/categories/**"],
    ".astro/collections/companies.schema.json": ["/src/content/companies/**"],
    ".astro/collections/memberships.schema.json": [
      "/src/content/memberships/**"
    ],
    ".astro/collections/prerequisites.schema.json": [
      "/src/content/prerequisites/**"
    ],
    ".astro/collections/seriess.schema.json": ["/src/content/seriess/**"],
    ".astro/collections/socials.schema.json": ["/src/content/socials/**"],
    ".astro/collections/videos.schema.json": ["/src/content/videos/**"]
  },
  // trunk.io
  "editor.defaultFormatter": "trunk.io",
  "files.readonlyExclude": {
    ".trunk/configs/**": true,
    ".trunk/trunk.yaml": true
  },
  "files.exclude": {
    "**/.trunk/*actions/": true,
    "**/.trunk/*logs/": true,
    "**/.trunk/*notifications/": true,
    "**/.trunk/*out/": true,
    "**/.trunk/*plugins/": true
  },
  "files.watcherExclude": {
    "**/.trunk/*actions/": true,
    "**/.trunk/*logs/": true,
    "**/.trunk/*notifications/": true,
    "**/.trunk/*out/": true,
    "**/.trunk/*plugins/": true
  }
}
