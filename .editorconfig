root = true

[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true # Use `<br>` for line breaks in markdown instead https://www.markdownguide.org/basic-syntax/#line-break-best-practices
insert_final_newline = true

[*.{md,mdx,txt}]
indent_size = 4
